@page
@model Elite.Razor_Temp.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Category";
}
<div class="container" >
    <div class="row pt-4 pb-3">
        <div class="col-4">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-8 text-end">
            <a asp-page="/categories/Create" class="btn btn-primary w-auto">
                <i class="bi bi-plus-circle"></i>  Create a category
            </a>
        </div>
    </div>
<table class="table table-hover  border-black table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Display Order</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.CategoryList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@item.ID" class="btn btn-success col-4 mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="/categories/Delete" asp-route-id="@item.ID" class="btn btn-danger col-4 mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
