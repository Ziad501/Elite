@page
@model Elite.Razor_Temp.Pages.Categories.EditModel
@{
}
@{
    ViewData["Title"] = "Edit a category";
}
<div class="container mt-4" style="max-width: 750px;">
    <form method="post">
        <input type="hidden" asp-for="category.ID" />
        <div class="border p-4 mt-4">
            <div class="row pb-2 text-center">
                <h2 class="text-primary p-0">Edit a category</h2>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="category.Name" class="control-label p-0"></label>
                <input asp-for="category.Name" class="form-control" />
                <span asp-validation-for="category.Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="category.DisplayOrder" class="control-label p-0"></label>
                <input asp-for="category.DisplayOrder" class="form-control" />
                <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-5">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-5">
                    <a asp-page="/Categories/index" class="btn btn-outline-primary form-control">Back To List</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}