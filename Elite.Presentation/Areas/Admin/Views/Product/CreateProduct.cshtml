@model Product
@{
    ViewData["Title"] = "Create Product";
}
<div class="container mt-4 card shadow border-0 mt-4" style="max-width: 750px;">
    <div class="card-header bg-primary bg-gradient ml-0 py-3 shadow">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add a Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="SaveProduct" method="post" class="row">
            <div class="border p-4">
                @* <div class="row pb-2 text-center"> *@
                @*     <h2 class="text-primary p-0">Add a Product</h2> *@
                @* </div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductName" class="form-control border-2 shadow" />
                    <label asp-for="ProductName" class="ms-2 text-primary"></label>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-2 shadow" />
                    <label asp-for="Description" class="ms-2 text-primary"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Brand" class="form-control border-2 shadow" />
                    <label asp-for="Brand" class="ms-2 text-primary"></label>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-2 shadow" />
                    <label asp-for="Price" class="ms-2 text-primary"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-2 shadow" />
                    <label asp-for="Price50" class="ms-2 text-primary"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-2 shadow" />
                    <label asp-for="Price100" class="ms-2 text-primary"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                @* <div asp-validation-summary="All"></div> *@
                <div class="row d-flex justify-content-center pt-2">
                    <div class="col-5">
                        <button type="submit" class="btn btn-primary bg-gradient shadow form-control">Save</button>
                    </div>
                    <div class="col-5">
                        <a asp-controller="Product" asp-action="Product" class="btn btn-outline-secondary shadow form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@*this is used for client side validation*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}