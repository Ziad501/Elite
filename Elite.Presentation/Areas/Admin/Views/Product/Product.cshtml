@model List<Product>
@{
    ViewData["Title"] = "Products";
}
<div class="container mt-4 card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3 shadow">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body container p-4">
        <div class="row pt-0 pb-4">

            <div class="col-12 text-end bg-gradient">
                <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary w-auto">
                    <i class="bi bi-plus-circle"></i>  Create a Product
                </a>
            </div>
        </div>
        <table class="table table-hover border table-striped">
            <thead>
                <tr>

                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">@item.Id</td>
                        <td>@item.ProductName</td>
                        <td>@item.Description</td>
                        <td>@item.Brand</td>
                        <td>@item.Price</td>
                        <td></td>
                        <td>
                            
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success col-6 mx-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger col-6 mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
