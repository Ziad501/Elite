@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-4 card shadow border-0 my-4" style="max-width: 750px;">
    <div class="card-header bg-primary bg-gradient ml-0 py-3 shadow">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete a Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-4 my-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductName" disabled class="form-control border-2 shadow" />
                    <label asp-for="ProductName" class="ms-2 text-primary"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-2 shadow" />
                    <label asp-for="Description" class="ms-2 text-primary"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Brand" disabled class="form-control border-2 shadow" />
                    <label asp-for="Brand" class="ms-2 text-primary"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-2 shadow" />
                    <label asp-for="Price" class="ms-2 text-primary"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" disabled class="form-control border-2 shadow" />
                    <label asp-for="Price50" class="ms-2 text-primary"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" disabled class="form-control border-2 shadow" />
                    <label asp-for="Price100" class="ms-2 text-primary"></label>
                </div>
                <div class="row d-flex justify-content-center pt-2">
                    <div class="col-5">
                        <button type="submit" class="btn btn-danger shadow form-control">Delete</button>
                    </div>
                    <div class="col-5">
                        <a asp-controller="Product" asp-action="Product" class="btn btn-outline-secondary shadow form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
