@model List<Category>
@{
    ViewData["Title"] = "Categories";
}
<div class="container mt-4 card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3 shadow">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body container p-4">
        <div class="row pt-0 pb-4">

            <div class="col-12 text-end bg-gradient">
                <a asp-controller="category" asp-action="CreateCategory" class="btn btn-primary w-auto">
                    <i class="bi bi-plus-circle"></i>  Create a category
                </a>
            </div>
        </div>
        <table class="table table-hover border table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Display Order</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success col-4 mx-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger col-4 mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
