@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Makes all cards the same height */
    .card {
        height: 100%; 
        display: flex;
        flex-direction: column;
        justify-content: space-between; 
    }

    
    .card-img-top {
        width: 100%; 
        height: 400px; 
        object-fit: cover; 
        border-radius: 5px; 
    }

    .card-body {
        flex-grow: 1; 
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-title {
        text-align: center;
    }
</style>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 d-flex">
            
            <div class="row p-2 w-100">
                <div class="col-12 p-1">
                    <div class="card border-0 p-2 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded shadow" />
                        <div class="card-body">
                            <div>
                                <p class="card-title h5 text-dark opacity-75 text-uppercase">@product.ProductName</p>
                                <p class="card-title text-warning">@product.Brand</p>
                            </div>
                        </div>
                        <div class="pb-3">
                            <p class="card-title text-dark text-opacity-75 text-center">@product.Price.ToString("c")</p>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
