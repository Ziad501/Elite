@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container mt-4" style="max-width: 750px;">
    <form asp-action="SaveEdit" method="post">
        <input type="hidden" asp-for="ID" />
        <div class="border p-4 mt-4">
            <div class="row pb-2 text-center">
                <h2 class="text-primary p-0">Edit a category</h2>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="control-label p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="control-label p-0"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-5">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-5">
                    <a asp-controller="Category" asp-action="Category" class="btn btn-outline-primary form-control">Back To List</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}